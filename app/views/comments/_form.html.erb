  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <!--commentsはboardにネストされているので、引数の配列は[親、子]の順番-->
      <!--Ajax通信でidを付与する。-->
      <%= form_with model: comment, url: [conversion, comment], id: 'new_comment', remote: true do |f| %>
      <div class="form-group mb-3">
        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control mb-3", id: 'js-new-comment-body', row:4,  placeholder: "コメント"%>
      </div>
      <%= f.submit '投稿', class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>